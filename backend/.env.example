# Throttle (rate limiting)
# THROTTLE_TTL: Time window in seconds for rate limiting (default: 30)
THROTTLE_TTL=30
# THROTTLE_LIMIT: Maximum number of requests allowed per window per user/session (default: 100)
THROTTLE_LIMIT=100
# MorroChat Backend Example Environment
# MongoDB connection options
# MONGO_URI: MongoDB connection string
MONGO_URI=mongodb://localhost:27017/morro_chat
# MONGO_MAX_POOL_SIZE: Maximum number of connections in the pool (default: 10)
MONGO_MAX_POOL_SIZE=10
# MONGO_MIN_POOL_SIZE: Minimum number of connections in the pool (default: 2)
MONGO_MIN_POOL_SIZE=2
# MONGO_SOCKET_TIMEOUT_MS: Socket timeout in milliseconds (default: 45000)
MONGO_SOCKET_TIMEOUT_MS=45000
# MONGO_CONNECT_TIMEOUT_MS: Connection timeout in milliseconds (default: 10000)
MONGO_CONNECT_TIMEOUT_MS=10000
# MONGO_BUFFER_COMMANDS: Enable/disable mongoose in-memory buffering (default: false)
MONGO_BUFFER_COMMANDS=false
NODE_ENV=development
PORT=3000

GEMINI_API_KEY="YOUR_GEMINI_API_KEY_HERE"
TAVILY_API_KEY="YOUR_TAVILY_API_KEY_HERE"
LANGCHAIN_API_KEY="YOUR_LANGCHAIN_API_KEY_HERE"
AI_PROVIDER="gemini"
OPENWEATHER_API_KEY="YOUR_OPENWEATHER_API_KEY_HERE"
GEMINI_TEMPERATURE=0
CHROMA_URL="http://localhost:8000"
# change for any topic it will be the domain of the chat
# For example, if you want to chat about Dominican food, set it to "Dominican Food"
# If you want to chat about a different topic, change it accordingly
# leave if empty to general chat without a specific topic
CHAT_DEFAULT_TOPIC="Dominican Food"